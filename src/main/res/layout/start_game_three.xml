<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tictactoe.StartGameThreeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22233D"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/scoreBoard"
                    android:textAlignment="center"
                    android:textColor="@color/colorHighlight"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="32dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/X_Wins"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"
                        android:text="@string/O_Wins"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"
                        android:text="@string/Draw"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:paddingEnd="0dp"
                    android:paddingStart="32dp">

                    <TextView
                        android:id="@+id/xWins_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/X_Wins_value"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/oWins_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/O_Wins_value"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/playDraw_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:text="@string/Draw_value"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorHighlight"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/read_instructions"
                android:textAlignment="textStart"
                android:textColor="@color/colorHighlight"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/instructions"
                android:textAlignment="textStart"
                android:textColor="@color/colorHighlight"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/playerTurn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/EmptyString"
                android:textAlignment="textStart"
                android:textColor="@color/colorHighlight"
                android:textSize="18sp"
                android:textStyle="bold" />


            <GridLayout
                android:id="@+id/gridview_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:background="#22233D"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="3"

                >

                <Button
                    android:id="@+id/button_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp"

                    />

                <Button
                    android:id="@+id/button_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/button_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/button_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/button_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/button_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />


                <Button
                    android:id="@+id/button_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />


                <Button
                    android:id="@+id/button_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

                <Button
                    android:id="@+id/button_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:background="@color/colorPrimaryDark"
                    android:onClick="selectCell"
                    android:text="@string/EmptyString"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

            </GridLayout>


            <Button
                android:id="@+id/reset_button"
                style="@android:style/Widget.Material.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:onClick="resetGame"
                android:text="@string/ResetButton"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/home_button"
                style="@android:style/Widget.Material.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:onClick="homeButton"
                android:text="@string/HomeButton"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
